#########################
# SERVER CONFIGURATION
#########################

# Node environment
NODE_ENV=development

# Important for Vercel serverless runtime
# (You can override per environment in Vercel dashboard)
PORT=5000
FRONTEND_URL=http://localhost:3000

####################################################
# DATABASE (PostgreSQL + Prisma)
####################################################

# Example for local dev:
# DATABASE_URL="postgresql://user:password@localhost:5432/aurora?schema=public"

DATABASE_URL=

# Optional: For connection pooling (e.g. pgBouncer)
# DIRECT_URL=


####################################################
# AUTHENTICATION (Email OTP)
####################################################

# Secret used to sign OTP tokens (JWT or your own mechanism)
OTP_SECRET=

# OTP expiry time (in minutes)
OTP_EXPIRY=10

# App URL (used when sending auth links)
APP_BASE_URL=


########################
# EMAIL SERVICE (Resend)
########################

RESEND_API_KEY=
RESEND_FROM_EMAIL=


##############################
# STRIPE (Payments + Webhooks)
##############################

STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Product/Price identifiers (from Stripe dashboard)
STRIPE_PRICE_ID=


##########################
# QR CODE / TICKET SYSTEM
##########################

# Secret key for generating secure ticket signatures
TICKET_SIGNING_SECRET=


#######################
# ADMIN / STAFF ACCESS
#######################

# Used for protected endpoints (e.g. ticket validation)
STAFF_API_KEY=
